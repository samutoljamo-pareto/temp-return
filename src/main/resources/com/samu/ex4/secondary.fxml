<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.samu.ex4.SecondaryController">
    <children>
        <Label text="My groups" />
      <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" />
      <HBox prefHeight="0.0" prefWidth="200.0">
         <children>
            <TextField />
            <Button fx:id="addGroup" mnemonicParsing="false" prefHeight="28.0" prefWidth="145.0" text="Add group" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
              <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="Go back" />
            <Button mnemonicParsing="false" onAction="#quit" text="Quit" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
